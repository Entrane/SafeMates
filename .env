# Configuration du serveur
PORT=3000
NODE_ENV=production

# Clé secrète JWT - IMPORTANT : Changez cette valeur par une clé unique et complexe
# Générez une clé sécurisée avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=votre_cle_secrete_jwt_tres_longue_et_securisee_a_changer_absolument_123456789

# Expiration des tokens JWT (en heures)
JWT_EXPIRATION=24h

# Configuration de la base de données
DATABASE_PATH=./database.sqlite

# Limites de taux (rate limiting)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Sécurité
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MS=900000

# Session
SESSION_TIMEOUT_MINUTES=30
